{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es6",
        "jsx": "preserve",
        "lib": [
            "es2016",
            "dom"
        ],
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
